<!DOCTYPE html>
<html>
  <head>
    <title>YoungBookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
   <div class="wrapper">
     <header class="header-site navbar navbar-fixed-top navbar-inverse">
      <div class="container">
       <div class="row">
        <nav class="nav navbar-nav navbar-left">
         <span class="bookers-title">YoungBookers</span>
        </nav>

        <div id="slidemenu">
         <ul class="nav navbar-nav navbar-right" data-hover="dropdown" data-animations="zoomIn fadeIn fadeInUp fadeIn">
          <% if reviewer_signed_in? %>
           <li class="">
            <%= link_to "マイページ", reviewer_path(current_reviewer.id), class: "glyphicon glyphicon-home" %>
           </li>
           <li class="">
            <%= link_to "レビュアー", reviewers_path, class: "glyphicon glyphicon-user" %>
           </li>
           <li class="">
            <%= link_to "レビュー", reviews_path, class: "glyphicon glyphicon-book" %>
           </li>
           <li class="">
            <%= link_to "ログアウト", destroy_reviewer_session_path, method: :delete, class: "glyphicon glyphicon-log-out" %>
           </li>
          <% else %>
           <li class="">
            <%= link_to "Home", root_path, class: "glyphicon glyphicon-home" %>
           </li>
           <li class="">
            <%= link_to "About", homes_about_path, class: "glyphicon glyphicon-link" %>
           </li>
           <li class="">
            <%= link_to "新規登録", new_reviewer_registration_path, class: "glyphicon glyphicon-edit" %>
           </li>
           <li class="">
            <%= link_to "ログイン", new_reviewer_session_path, class: "glyphicon glyphicon-log-out" %>
           </li>
          <% end %>
         </ul>
        </div>
       </div>
      </div>
     </header>

     <%= yield %>

     <footer>
       <p>CopyRight Infratop.inc</p>
      </div>
     </footer>
      </div>

    </div>
  </body>
</html>
