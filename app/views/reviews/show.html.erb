
<div class="container">
　<div class="row">
	<div class="col-xs-3">
      <%= render 'reviewers/info', reviewer: @review.user %>
      <%= render 'reviews/new', review: @review_new %>
    </div>
   <div class="col-xs-9"> 

<h1>Book detail</h1>

<table class="table" width="650" cellspacing="0" cellpadding="5" >
<tr>
<th width="200"><font></font></th>
<th width="100"><font></font></th>
<th width="100"><font></font></th>
<th width="50"><font></font></th>
<th width="50"><font></font></th>
</tr>

<tr>
<td align="left" width="200">
	<%= link_to reviewer_path(@reviewer) do %>
	<%= attachment_image_tag @reviewer, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
  <br>
  <%= link_to @reviewer.last_name, reviewer_path(@reviewer) %>
	<% end %>
</td>
<td align="left" width="100"><%= link_to @review.title, review_path(@review) %></td>
<td valign="top" width="100"><%= @book.body %></td>


<% if @review.user == current_user %>
    <td valign="top" width="50"><%= link_to "Edit", edit_review_path(@review), class: "btn btn-success" %></td>
    <td valign="top" width="50"><%= link_to "Destroy", review_path(@review), class: "btn btn-danger", method: :delete, "data-confirm" => "本当に消しますか？" %></td>
<% end %>

</tr>

</table>

</div>
 　</div>
 </div>


