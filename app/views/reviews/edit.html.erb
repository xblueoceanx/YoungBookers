<% if @review.errors.any? %>
  <div class="error_explanation">
  <h2><%= @review.errors.count %> errors prohibited this obj from being saved:</h2>
    <ul>
      <% @review.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="col-md-6 col-md-offset-3">
  <h2>マイレビュー編集</h2>
    <%= form_for(@review) do |f| %>
      <div>
        <label>本のタイトル</label>
          <div>
            <%= f.text_field :title, autofocus: true, class: "col-xs-12" %>
          </div>
      </div>
      <div>
        <label>本のレビュー</label>
          <div>
            <%= f.text_area :book_review, autofocus: true, class: "col-xs-12" %>
          </div>
      </div>
      <!-- ボタン群 -->
      <p>
        <%= f.submit "更新する",  class: "botn btn btn-primary btn-block" %>
      </p>
    <% end %>
    <%= link_to "Show", review_path(@review) %>
    |
    <a href="/reviews">Back</a>
</div>