<% if @book.errors.any? %>
  <div class="error_explanation">
  <h2><%= @book.errors.count %> errors prohibited this obj from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="container">
　<div class="row">
  <div class="col-xs-3">
    <%= render 'info', user: @user %>
    <%= render 'books/new', book: @book %>
    </div>
   <div class="col-xs-9"> 

<h2>Books</h2>

<table class="table" width="600" cellspacing="0" cellpadding="5" >

<tr>
<th width="200"><font></font></th>
<th width="200"><font>Title</font></th>
<th width="400"><font>Opinion</font></th>
</tr>

<% @books.each do |book| %>

<tr>
<td align="left" width="200">
	<%= link_to user_path(book.user) do %>
	<%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
	<% end %>
</td>
<td align="left" width="200"><%= link_to book.title, book_path(book) %></td>
<td valign="top" width="400"><%= book.body %></td>
<!-- いいね機能 -->
<td valign="top" width="400">
<%= link_to book_path(book.id) do %>
  <span class="glyphicon glyphicon-heart" aria-hidden="true"><%=  "#{book.favorites.count} " %></span>
<% end %>
</td>
<!-- いいね機能 -->
<!-- コメント機能 -->
<td valign="top" width="400"><%= link_to "#{book.book_comments.count} コメント", book_path(book.id) %></td>
<!-- コメント機能 -->
</tr>

<% end %>

</table>


</div>
