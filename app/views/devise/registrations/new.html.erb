<div class="container">

 <div class="row" style="padding-bottom: 10px;">
  <h2 style="border-bottom: solid 5px #000; width: 190px;">新規会員登録</h2>
 </div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group" style="width: 190px;">
          <%= f.label :名前 %>
          <div style="margin-left: 10px;">
           <p>
            (姓)
            <%= f.text_field :last_name, class: "form-control" %>
           </p>
           <p>
            (名)
            <%= f.text_field :first_name, class: "form-control" %>
           </p>
          </div>
       </div>

       <div class="form-group" style="width: 190px;">
          <%= f.label :フリガナ %>
          <div style="margin-left: 10px;">
           <p>
            (セイ)
            <%= f.text_field :last_name_kana, class: "form-control" %>
           </p>
           <p>
            (メイ)
            <%= f.text_field :first_name_kana, class: "form-control" %>
           </p>
          </div>
       </div>

       <div class="form-group" style="width: 190px;">
          <%= f.label :メールアドレス %>
          <div style="margin-left: 10px;">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
       </div>

       <div class="form-group"  style="width: 190px;">
          <%= f.label :電話番号（ハイフンなし） %>
          <div style="margin-left: 10px;">
          <%= f.text_field :telephone_number, class: "form-control" %>
          </div>
       </div>

       <div class="form-group"  style="width: 190px;">
          <%= f.label :パスワード（6文字以上） %>
          <div style="margin-left: 10px;">
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          </div>
       </div>

       <div class="form-group"  style="width: 190px;">
          <%= f.label "パスワード(確認用)" %><br />
          <div style="margin-left: 10px;">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>
       </div>
<% end %>

<%= render "devise/shared/links" %>

</div>