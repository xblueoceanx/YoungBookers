<div class="col-md-6 col-md-offset-3">

<% if @reviewer.errors.any? %>
  <div class="error_explanation">
  <h2><%= @reviewer.errors.count %> errors prohibited this obj from being saved:</h2>
    <ul>
      <% @reviewer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h2>プロフィール編集画面</h2>
<%= form_for(@reviewer) do |f| %>
  <div>
    <label>Name</label>
    <%= f.text_field :last_name, autofocus: true%>
  </div>
  <div>
    <label>Image</label>
     <%= f.attachment_field :profile_image %>
  </div>
  <%= f.submit "更新する", class: "btn btn-default active"%>
<% end %>

</div>