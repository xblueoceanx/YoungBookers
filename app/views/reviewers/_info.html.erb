<h2>User info</h2>
<div>
 <%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
</div>

<table class="table" width="600" cellspacing="0" cellpadding="5">
<tr>
<th><font size=3px>name</font></th>
<th width="300"><font size=3px><%= user.name %></font></th>
</tr>
<tr>
<th><font size=3px>introduction</font></th>
<th width="300"><font size=3px><%= user.introduction %></font></th>
</tr>

<p>
  <%= link_to "", edit_user_path(user), class: "glyphicon glyphicon-wrench btn btn-default btn-block" %>
</p>
