<div class="container">
　<div class="row">
	<div class="col-xs-3">
      <%= render 'books/info', user: @user %>
      <%= render 'books/new', book: @book %>
    </div>
   <div class="col-xs-9"> 

<h1>Users</h1>

<table class="table" width="925" cellspacing="0" cellpadding="5" >
<tr>
<th width="200"><font>image</font></th>
<th width="400"><font>name</font></th>
<th width="100"><font>name</font></th>
<th width="100"><font>name</font></th>
<th width="100"><font></font></th>
<th width="25"><font></font></th>
</tr>

<% @users.each do |user| %>

<tr>
<td align="left" width="200"><%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></td>
<td valign="top" width="400"><%= user.name %></td>
<td valign="top" width="100">フォロー数：<%= user.follower.count %></td>
<td valign="top" width="100">フォロワー数：<%= user.followed.count %></td>
<td valign="top" width="100">
<% if current_user.following?(user) %>
   <%= link_to 'フォロー外す', user_relationships_path(user.id) , method: :delete %>
<% else %>
   <%= link_to 'フォローする', user_relationships_path(user.id), method: :POST %>
<% end %>
</td>
<td valign="top" width="25"><%= link_to "Show", user_path(user) %></td>
</tr>

<% end %>

</table>


</div>
 　</div>
 </div>
